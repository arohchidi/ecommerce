<% if (accountSuccess && typeof accountSuccess != 'undefined' && accountSuccess != '')  { %>
                        <div class="col-md-10 col-md-offset-3 text_align pull-right alert alert-success" ><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a><%= accountSuccess %></div>
                        <% }  %>

<% if (checkout && typeof checkout != 'undefined' && checkout!= '')  { %>
                        <div class="col-md-10 col-md-offset-3 text_align pull-right alert alert-success" ><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a><%= checkout %></div>
                        <% }  %>

               

		<div class="login-area mt-80">
		    <div class="container">
		        <div class="row">
		            <div class="col-md-12 col-12 col-lg-6 col-xl-6 ml-auto mr-auto">
                        	
                        
		                <div class="login">
		                    <div class="login-form-container">
		                        <div class="login-form">
		                            <form action="/process_login" method="POST">
		                                <label>Email</label>
                                        <input name="email" type="email">
                                        
                                        <label>Password</label>
                                        
                                        <input name="password" type="password">
                                        <% if (incorrectPassword && typeof incorrectPassword != 'undefined' && incorrectPassword != '')  { %>
                        <li class="text-danger"><%= incorrectPassword %></li>
                        <% }  %>
                                        <div class="button-box">
                                            <div class="login-toggle-btn">
                                                <input type="checkbox">
                                                <label>Remember me</label>
                                                <a href="#">Forgot Password?</a>
                                            </div>
                                            <button type="submit" class="default-btn">Login</button>
                                        </div>
		                            </form>
		                            <div class="no-account">
		                                <a href="/users/register">No account? Create one here</a>
		                            </div>
		                        </div>
		                    </div>
		                </div>
		            </div>
		        </div>
		    </div>
		</div>
		<!--Login Area End-->
		


